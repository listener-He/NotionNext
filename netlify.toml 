[build]
  command = "npm run build"
  publish = "out"

[[plugins]]
  package = "@netlify/plugin-nextjs"

[functions]
  included_files = ["lang/*", "themes/**/*", "components/**/*", "lib/**/*", "conf/*"]

[build.environment]
  EXPORT = "true"
  NODE_VERSION = "20"

[[headers]]
  for = "/*"
  [headers.values]
    X-Frame-Options = "DENY"
    X-Content-Type-Options = "nosniff"
    Referrer-Policy = "strict-origin-when-cross-origin"
    Cache-Control = "public, max-age=31536000, immutable"

[[headers]]
  for = "/_next/static/*"
  [headers.values]
    Cache-Control = "public, max-age=31536000, immutable"

[[headers]]
  for = "/static/*"
  [headers.values]
    Cache-Control = "public, max-age=31536000, immutable"

[[headers]]
  for = "/api/rss"
  [headers.values]
    Cache-Control = "public, max-age=3600, must-revalidate"

[[redirects]]
  from = "/feed"
  to = "/rss/feed.xml"
  status = 301
  force = true

[[redirects]]
  from = "/rss"
  to = "/rss/feed.xml"
  status = 301
  force = true

[[redirects]]
  from = "/atom"
  to = "/rss/atom.xml"
  status = 301
  force = true
